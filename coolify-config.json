{
  "name": "PDFxandria",
  "description": "Sistema de gerenciamento de PDFs com otimização SEO",
  "version": "1.0.0",
  "port": 5000,
  "healthcheck": {
    "enabled": true,
    "path": "/api/health",
    "interval": "30s",
    "timeout": "10s",
    "retries": 3
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "5000"
  },
  "required_env_vars": [
    "DATABASE_URL"
  ],
  "build": {
    "buildpack": "node",
    "node_version": "20",
    "build_command": "npm ci && npm run build",
    "start_command": "npm start"
  },
  "volumes": [
    {
      "host_path": "./uploads",
      "container_path": "/app/uploads",
      "type": "bind"
    }
  ],
  "resources": {
    "cpu": "0.5",
    "memory": "512Mi"
  },
  "database": {
    "type": "postgresql",
    "version": "15"
  }
}